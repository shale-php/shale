{
    "name": "bagwaa/shale-ai",
    "description": "A package for interacting with the Amazon Bedrock service",
    "require": {
        "aws/aws-sdk-php": "^3.342"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "laravel/pint": "^1.21"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bagwaa\\ShaleAi\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bagwaa\\ShaleAi\\Providers\\ShaleServiceProvider"
            ],
            "aliases": {
                "Shale": "Bagwaa\\ShaleAi\\Facades\\ShaleFacade"
            }
        }
    },
    "authors": [
        {
            "name": "Richard Bagshaw",
            "email": "richard@bagshaw.co.uk"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=shale-config"
        ]
    }
}
